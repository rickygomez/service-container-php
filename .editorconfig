# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.md]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{xml}]
indent_size = 2

[*.{blade,vue,js,html,htm}]
indent_size = 2

[*.json]
indent_size = 2

[*.{php}]
indent_size = 4